# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
API_VERSION=v1
API_PREFIX=api

# Multi-tenancy
MULTI_TENANCY_MODE=token
TENANT_HEADER_NAME=X-Tenant-ID
ALLOW_CROSS_TENANT_ACCESS=false

# Database (Prisma)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nestjs_saas?schema=public

# Legacy database config (keep for configuration module)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=nestjs_saas

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=nestjs-saas-api
JWT_AUDIENCE=nestjs-saas-client

# OAuth - Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# OAuth - GitHub
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:3000/api/v1/auth/github/callback

# Stripe
STRIPE_SECRET_KEY=sk_test_
STRIPE_PUBLISHABLE_KEY=pk_test_
STRIPE_WEBHOOK_SECRET=whsec_

# Email (SMTP)
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USER=
MAIL_PASSWORD=
MAIL_FROM=noreply@yoursaas.com
MAIL_FROM_NAME=Your SaaS App

# AWS S3 (or compatible)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
AWS_S3_ENDPOINT=
AWS_S3_FORCE_PATH_STYLE=false

# OpenTelemetry
OTEL_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=nestjs-saas-api
OTEL_SERVICE_VERSION=1.0.0

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
THROTTLE_STRICT_MODE=true

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-change-in-production
CSRF_ENABLED=false

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=true

# Webhooks
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_TIMEOUT=5000

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# API Keys (for external integrations)
INTERNAL_API_KEY=your-internal-api-key-for-server-to-server

# Feature Flags
FEATURE_WEBSOCKETS_ENABLED=true
FEATURE_PAYMENTS_ENABLED=true
FEATURE_EMAIL_ENABLED=true
